# -*- Makefile with variables-*-
CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(NAME)

$(NAME): $(OBJ) m.h
	$(CC) $(OBJ) -o $(NAME)

.PHONY: fclean

fclean: clean oclean

.PHONY: clean
clean:
	$(RM) -f *.swp *~ $(NAME)

.PHONY: oclean
oclean:
	$(RM) $(OBJ)

.PHONY: re
re: fclean all 
