# -*- Makefile with variables-*-
CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

fclean: clean oclean

clean:
	$(RM) *.swp *~ $(NAME)

oclean:
	$(RM) $(OBJ)

re: fclean all 
